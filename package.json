{
  "name": "a2a-demo-rebuild",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently --names \"UI,Orch,Weather\" --prefix-colors \"cyan,gray,green\" \"npm run dev:ui\" \"npm run dev:orchestrator\" \"npm run dev:weather\"",
    "dev:agent": "cd agents && npx @langchain/langgraph-cli dev --port 8123 --no-browser",
    "dev:ui": "next dev",
    "dev:orchestrator": "cd agents && .venv/bin/python orchestrator.py",
    "dev:weather": "bash -c 'cd agents && source .venv/bin/activate && python weather_agent.py'",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "install:agents": "cd agents && python -m venv .venv && .venv/bin/pip install -r requirements.txt"
  },
  "dependencies": {
    "@a2a-js/sdk": "latest",
    "@ag-ui/a2a-middleware": "latest",
    "@ag-ui/client": "0.0.40",
    "@ag-ui/langgraph": "^0.0.18",
    "@copilotkit/react-core": "latest",
    "@copilotkit/react-ui": "file:../CopilotKit/CopilotKit/packages/react-ui",
    "@copilotkit/runtime": "file:../CopilotKit/CopilotKit/packages/runtime",
    "@copilotkit/runtime-client-gql": "file:../CopilotKit/CopilotKit/packages/runtime-client-gql",
    "@copilotkit/shared": "file:../CopilotKit/CopilotKit/packages/shared",
    "@phosphor-icons/react": "^2.1.10",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-tabs": "^1.1.3",
    "@tailwindcss/postcss": "^4.1.14",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dedent": "^1.7.0",
    "lucide-react": "^0.477.0",
    "next": "15.1.6",
    "next-themes": "^0.4.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^3.0.2",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "eslint": "^8",
    "eslint-config-next": "15.1.6",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "@ag-ui/client": "0.0.40"
  }
}